<?php

/**
 * @file
 * Contains hooks and functions for the Custom Event Registration module.
 */

use Drupal\Core\Routing\RouteMatchInterface;

/**
 * Implements hook_help().
 */
function custom_event_registration_help($route_name, RouteMatchInterface $route_match) {
  switch ($route_name) {
    case 'help.page.custom_event_registration':
      $output = '<h3>' . t('About') . '</h3>';
      $output .= '<p>' . t('The Custom Event Registration module allows administrators to create events and enables users to register for those events.') . '</p>';
      $output .= '<h3>' . t('Features') . '</h3>';
      $output .= '<ul>';
      $output .= '<li>' . t('Create and manage event configurations') . '</li>';
      $output .= '<li>' . t('User registration with validation') . '</li>';
      $output .= '<li>' . t('Email notifications to users and administrators') . '</li>';
      $output .= '<li>' . t('Admin listing with filters and CSV export') . '</li>';
      $output .= '</ul>';
      return $output;
  }
}

/**
 * Implements hook_mail().
 */
function custom_event_registration_mail($key, &$message, $params) {
  switch ($key) {
    case 'registration_confirmation':
      $message['subject'] = t('Event Registration Confirmation - @event_name', [
        '@event_name' => $params['event_name'],
      ]);
      $message['body'][] = t('Dear @name,', [
        '@name' => $params['full_name'],
      ]);
      $message['body'][] = '';
      $message['body'][] = t('Thank you for registering for the following event:');
      $message['body'][] = '';
      $message['body'][] = t('Event Name: @event_name', [
        '@event_name' => $params['event_name'],
      ]);
      $message['body'][] = t('Event Date: @event_date', [
        '@event_date' => $params['event_date'],
      ]);
      $message['body'][] = t('Category: @category', [
        '@category' => $params['category'],
      ]);
      $message['body'][] = '';
      $message['body'][] = t('Your registration details:');
      $message['body'][] = t('Name: @name', ['@name' => $params['full_name']]);
      $message['body'][] = t('Email: @email', ['@email' => $params['email']]);
      $message['body'][] = t('College: @college', ['@college' => $params['college_name']]);
      $message['body'][] = t('Department: @department', ['@department' => $params['department']]);
      $message['body'][] = '';
      $message['body'][] = t('We look forward to seeing you at the event!');
      $message['body'][] = '';
      $message['body'][] = t('Best regards,');
      $message['body'][] = t('Event Registration Team');
      break;

    case 'admin_notification':
      $message['subject'] = t('New Event Registration - @event_name', [
        '@event_name' => $params['event_name'],
      ]);
      $message['body'][] = t('A new registration has been received:');
      $message['body'][] = '';
      $message['body'][] = t('Event Details:');
      $message['body'][] = t('Event Name: @event_name', [
        '@event_name' => $params['event_name'],
      ]);
      $message['body'][] = t('Event Date: @event_date', [
        '@event_date' => $params['event_date'],
      ]);
      $message['body'][] = t('Category: @category', [
        '@category' => $params['category'],
      ]);
      $message['body'][] = '';
      $message['body'][] = t('Registrant Details:');
      $message['body'][] = t('Name: @name', ['@name' => $params['full_name']]);
      $message['body'][] = t('Email: @email', ['@email' => $params['email']]);
      $message['body'][] = t('College: @college', ['@college' => $params['college_name']]);
      $message['body'][] = t('Department: @department', ['@department' => $params['department']]);
      $message['body'][] = '';
      $message['body'][] = t('Registration Time: @time', [
        '@time' => date('Y-m-d H:i:s', $params['created']),
      ]);
      break;
  }
}

/**
 * Implements hook_theme().
 */
function custom_event_registration_theme($existing, $type, $theme, $path) {
  return [
    'event_registration_listing' => [
      'variables' => [
        'filter_form' => NULL,
        'registrations' => [],
        'total_count' => 0,
        'event_name' => '',
      ],
    ],
  ];
}
